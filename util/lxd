#!/bin/sh
### BEGIN INIT INFO
# Provides:             lxd
# Required-Start:
# Required-Stop:
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6 
# Short-Description:    lxd daemon
# Description:          lxd daemon template $
### END INIT INFO

# Actions
case "$1" in
  start)
    lxd
    ;;
  stop)
    pkill lxd
    ;;
  restart)
    pkill lxd
    lxd
    ;;
  *)
    echo "Usage: $0 start" >&2
    exit 3
    ;;
esac

exit 0
